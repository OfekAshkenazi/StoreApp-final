<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">
            <ImageView
                android:id="@+id/imageType_adapter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/cartIV_adapter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/add_to_cart_icon"/>

            <TextView
                android:id="@+id/titleTV_adapter"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/imageType_adapter"
                android:gravity="left|center"
                android:text="text"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/priceTV_adapter"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/titleTV_adapter"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>