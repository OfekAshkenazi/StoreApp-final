<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ofek.storeapp.MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:contentInsetStart="0dp"
        android:contentInsetEnd="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text23123"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Products"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/text3434"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:gravity="center|end"
                android:text="Sort By"
                android:layout_toRightOf="@id/text23123"/>

            <Spinner
                android:id="@+id/sortSpinner"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/text3434"
                android:gravity="center"></Spinner></RelativeLayout></android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"></android.support.v7.widget.RecyclerView>

    <ImageButton
        android:id="@+id/checkoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/cardview_shadow_end_color"
        android:src="@mipmap/checkout_cart" />


</RelativeLayout>
